  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ESNEXT",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "declaration": false
  },
  "exclude": [
    "test"
  ]
}